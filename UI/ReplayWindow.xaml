<Window x:Class="ZerodhaOxySocket.ReplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Replay" Height="320" Width="420">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <Label Content="Start:" VerticalAlignment="Center"/>
            <DatePicker Name="dpStart" SelectedDate="{x:Static sys:DateTime.Today}"/>
            <TextBox Name="tbStartTime" Width="80" Margin="6,0,0,0" Text="09:15:00"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
            <Label Content="End:" VerticalAlignment="Center"/>
            <DatePicker Name="dpEnd" SelectedDate="{x:Static sys:DateTime.Today}"/>
            <TextBox Name="tbEndTime" Width="80" Margin="6,0,0,0" Text="15:30:00"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8">
            <Label Content="TimeScale:" VerticalAlignment="Center"/>
            <TextBox Name="tbScale" Width="60" Text="10"/>
            <Label Content="(1 = real-time, >1 faster)" VerticalAlignment="Center" Margin="8,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,8">
            <Button Name="btnStart" Click="BtnStart_Click" Content="Start Replay" Width="120"/>
            <Button Name="btnStop" Click="BtnStop_Click" Content="Stop" Width="80" Margin="8,0,0,0"/>
        </StackPanel>

        <TextBox Name="tbLog" Grid.Row="4" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
    </Grid>
</Window>
